<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/addressBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/assistant_semibold"
        android:maxWidth="300dp"
        android:textColor="#757575"
        android:padding="6dip"
        android:textAlignment="center"
        android:maxLines="1"
        android:textSize="16dp"
        android:textFontWeight="650"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_edittext"
        />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="?attr/homeButtonStyle"
        ></ImageButton>

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/addressBar"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="16dp"
        android:background="?attr/menuButtonStyle"
        > </ImageButton>

    <ImageButton
        android:id="@+id/bookmark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="349dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/booke"></ImageButton>

    <ImageButton
        android:id="@+id/speech"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="309dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mic"></ImageButton>

    <WebView
        android:id="@+id/webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"></WebView>
</RelativeLayout>